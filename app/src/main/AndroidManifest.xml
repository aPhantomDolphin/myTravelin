<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travelin">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.travelin.LoginActivity"
            android:label="LoginActivity"
            android:parentActivityName="com.example.travelin.MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/LoginInTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.travelin.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.travelin.RegisterActivity"
            android:label="RegisterActivity"
            android:parentActivityName="com.example.travelin.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/RegisterTheme">
        </activity>
        <activity android:name="com.example.travelin.HomeActivity"
            android:label="HomeActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.example.travelin.ForgotPasswordActivity"
            android:label="ForgetPasswordActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="com.example.travelin.ProfileActivity"
            android:label="ProfileActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/ProfileTheme">
        </activity>
        <activity
            android:name="com.example.travelin.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>