<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile"
    android:background="@color/graylight"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/home_button"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:background="@drawable/homeicon"
            android:text="" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/home_button"
            android:background="@drawable/searchicon" />


        <Button
            android:id="@+id/Logout_button"
            android:layout_width="101dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/buttonstyleithgradient"
            android:text="LOGOUT"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="557dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/other_profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/otherprofilepic" />

            <TextView
                android:id="@+id/other_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Elizabeth Swan"
                android:textColor="#fff"
                android:textSize="31sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/other_bio_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:text="Beaches are my life!"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="420dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="663dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="313dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Reason to report:"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/CheckBoxResponse1"
                        android:layout_height="wrap_content"
                        android:text="It's spam"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/endblue"
                        android:layout_width="fill_parent">
                    </CheckBox>

                    <CheckBox
                        android:id="@+id/CheckBoxResponse2"
                        android:layout_height="wrap_content"
                        android:text="It's inappropriate"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/endblue"
                        android:layout_width="fill_parent">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/CheckBoxResponse3"
                        android:layout_height="wrap_content"
                        android:text="It's impersonating someone I know "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/endblue"
                        android:layout_width="fill_parent">
                    </CheckBox>
                    <CheckBox
                        android:id="@+id/CheckBoxResponse4"
                        android:layout_height="wrap_content"
                        android:text="I believe it violates Travelin's community guidelines"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/endblue"
                        android:layout_width="fill_parent">
                    </CheckBox>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/report_user"
            android:textColor="#fff"
            android:background="@drawable/buttonstyleithgradient"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report User"/>

        <Button
            android:id="@+id/backto_profile_other"
            android:textColor="#fff"
            android:background="@drawable/buttonstyleithgradient"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to profile"/>



    </LinearLayout>


</LinearLayout>