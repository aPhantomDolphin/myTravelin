<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity"
    android:background="@color/graylight"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/home_button"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:background="@drawable/homeicon"
            android:text="" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/home_button"
            android:background="@drawable/searchicon" />


        <Button
            android:id="@+id/Logout_button"
            android:layout_width="101dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/buttonstyleithgradient"
            android:text="LOGOUT"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="571dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/profilepic" />

            <Button
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="30dp"
                android:background="@color/startblue"
                android:text="change password"
                android:textColor="#fff" />


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="420dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="663dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="313dp"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Edit Name:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/email_edit_profile"
                            android:layout_width="256dp"
                            android:layout_height="wrap_content"
                            android:editable="true"
                            android:padding="10dp"
                            android:hint="William Shakesphere"
                            android:textColor="@color/endblue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Edit Bio:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/bio_edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:editable="true"
                            android:padding="10dp"
                            android:hint="I love to travel!"
                            android:textColor="@color/endblue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="100dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="20dp"
                            android:text="Gender"
                            android:textColor="@color/endblue"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView4"
                            android:onClick="onRadioButtonClick"
                            android:text="Male"
                            android:textSize="20dp" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/radio_male"
                            android:onClick="onRadioButtonClick"
                            android:text="Female"
                            android:textSize="20dp" />

                        </RadioGroup>
                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:padding="10dp"-->
                            <!--android:text="Edit Gender:"-->
                            <!--android:textSize="20sp"-->
                            <!--android:textStyle="bold" />-->

                        <!--<android.support.design.widget.TextInputEditText-->
                            <!--android:id="@+id/gender_edit_profile"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:editable="true"-->
                            <!--android:padding="10dp"-->
                            <!--android:hint="Male"-->
                            <!--android:textColor="@color/endblue"-->
                            <!--android:textSize="20sp"-->
                            <!--android:textStyle="bold" />-->

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Add Interests:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/intersts_edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:editable="true"
                            android:padding="10dp"
                            android:hint="Beaches, Hiking, Snow"
                            android:textColor="@color/endblue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:background="@color/endblue"
            android:text="Save Profile"
            android:textColor="#fff" />


        <Button
            android:id="@+id/profilepic_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@color/endblue"
            android:text="Edit Picture"
            android:textColor="#fff" />
        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:textSize="10dp"
            android:text="Delete Account"
            android:textAlignment="center"/>

    </LinearLayout>



</LinearLayout>
