<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graylight"
    >

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@color/login_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp">

            <EditText
                android:id="@+id/flight_from"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/baselineflighttakeoffblack24dp"
                android:ems="10"
                android:hint="from"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="@color/black1"
                android:textColorHint="@color/black1" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/flight_to"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/baselineflightlandblack24dp"
                android:ems="10"
                android:hint="to"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="@color/black1"
                android:textColorHint="@color/black1" />

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/flight_date"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:drawableEnd="@drawable/baselinedaterangeblack24dp"
            android:ems="10"
            android:hint="date"
            android:importantForAutofill="no"
            android:inputType="date"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/black1"
            android:textColorHint="@color/black1" />


    </LinearLayout>


    <Button
        android:id="@+id/search_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_nav"
        android:background="@drawable/buttonstyleithgradient"
        android:text="@string/search_flights"
        android:textColor="#fff" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:itemBackground="@color/login_background"
        app:itemIconTint="@color/colorWhiteTrans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu">

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>
