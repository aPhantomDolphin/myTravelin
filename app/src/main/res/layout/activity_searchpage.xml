<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">


        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/searchicon" />


        <Button
            android:id="@+id/back_button"
            android:layout_width="101dp"
            android:layout_height="46dp"
            android:background="@drawable/buttonstyleithgradient"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="244dp"
            android:layout_height="56dp"
            android:layout_toRightOf="@id/search_icon" />

    </RelativeLayout>

    <TextView
        android:layout_width="228dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="FILTER BASED ON:"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/endblue"
        android:textSize="20dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="243dp">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="88dp"
            android:layout_height="31dp"
            android:text="GENDER"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/endblue"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/checkBox_male"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:text="Male"
            android:textSize="20dp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/checkBox_female"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox_male"
            android:text="Female"
            android:textSize="20dp"
            android:onClick="onCheckboxClicked"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="88dp"
            android:textColor="@color/endblue"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_below="@id/checkBox_female"
            android:text="Rating"
            android:textSize="20dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="236dp"
            android:layout_height="54dp"
            android:layout_below="@id/textView5"
            android:numStars="5"
            android:stepSize="0.1" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/search_button"

            android:textColor="#fff"
            android:background="@drawable/buttonstyleithgradient"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"/>

        ]

    </LinearLayout>


</LinearLayout>
