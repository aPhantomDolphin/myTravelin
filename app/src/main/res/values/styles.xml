<resources>

    <!-- Login page theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/login_background_dark</item>
        <item name="android:background">@color/login_background</item>
        <item name="android:src">@drawable/logo_white</item>
    </style>

    <style name="LoginInTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/login_background</item>
        <item name="android:statusBarColor">@color/login_background_dark</item>
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/register_background</item>
        <item name="android:statusBarColor">@color/register_background_dark</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/profile_gray</item>
        <item name="android:statusBarColor">@color/register_background</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/black1</item>
        <item name="android:statusBarColor">@color/black1</item>
    </style>

    <style name="MessageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

</resources>
